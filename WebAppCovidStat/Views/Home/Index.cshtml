
@model IEnumerable<WebAppCovidStat.Models.VacPerson>

<html>
<head>

@{
    ViewBag.Title = "Index";
}

<h2>Перелік вакцинацій</h2>

    </head>
<body>
    <header>
        <p>
            @Html.ActionLink("Create New", "Create")
            @Html.ActionLink("City Stats", "AboutCity")
            @Html.ActionLink("Vaccine Type Stats", "AboutVaccineTypes")
            @Html.ActionLink("Vaccine Count Stats", "AboutVaccineCount")
        </p>
        </header>
    <main>

        @using (Html.BeginForm())
        {
        <p>
            Last Name: @Html.TextBox("SearchString") <br />
            <input type="submit" value="Filter" />
        </p>
    }
        



        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.FirstName)
                </th>
                <th>
                    @Html.ActionLink(Html.DisplayNameFor(model => model.LastName).ToHtmlString(), "Index", new { sortOrder = ViewBag.SortingName })
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Birthday)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.City)
                </th>
                <th>
                    @Html.ActionLink(Html.DisplayNameFor(model => model.DayOfVaccination).ToHtmlString(), "Index", new { sortOrder = ViewBag.SortingDate })
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Vaccine)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.VaccineDose)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.FirstName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LastName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Birthday)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.City)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DayOfVaccination)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Vaccine)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.VaccineDose)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                        @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                    </td>
                </tr>
            }

        </table>

        <br />
        @using (Html.BeginForm("Export", "Home", FormMethod.Post))
        {
            <input type="submit" id="btnSubmit" value="Export" />
        }
        </main>
    </body>
</html>
