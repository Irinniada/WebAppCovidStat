@model WebAppCovidStat.Models.VacPerson

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>

<script src="/Scripts/MicrosoftAjax.js" type="text/javascript"></script>
<script src="/Scripts/MicrosoftMvcValidation.js" type="text/javascript"></script>

@{ Html.EnableClientValidation(); }
@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Fields</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.FirstName)
        </div>
        <div class="editor-field">
            @Html.TextBoxFor(model => model.FirstName)
            @Html.ValidationMessageFor(model => model.FirstName)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.LastName)
        </div>
        <div class="editor-field">
            @Html.TextBoxFor(model => model.LastName)
            @Html.ValidationMessageFor(model => model.LastName)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Birthday)
        </div>
        <div class="editor-field">
            @Html.TextBoxFor(model => model.Birthday, new { type = "date" })
            @Html.ValidationMessageFor(model => model.Birthday)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.City)
        </div>
        <div class="editor-field">
            @Html.TextBoxFor(model => model.City)
            @Html.ValidationMessageFor(model => model.City)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.DayOfVaccination)
        </div>
        <div class="editor-field">
            @Html.TextBoxFor(model => model.DayOfVaccination, new { type = "date" })
            @Html.ValidationMessageFor(model => model.DayOfVaccination)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Vaccine)
        </div>
        <div>
            @Html.DropDownList("vaccine", ViewBag.Vaccines as SelectList)
            @Html.ValidationMessageFor(model => model.Vaccine)

        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.VaccineDose)
        </div>
        <div class="editor-field">
            @Html.TextBoxFor(model => model.VaccineDose, new { type = "number" })
            @Html.ValidationMessageFor(model => model.VaccineDose)
        </div>

        <p>
            <input type="submit" value="Create" />
        </p>
    </fieldset>

}